<resources>

    <style name="Base.V21.Theme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="isLight">true</item>

        <item name="android:windowBackground">?attr/colorBackground</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/black</item>

        <item name="colorPrimary">@android:color/white</item>
        <item name="colorOnPrimary">@color/silver</item>
        <item name="colorPrimaryText">@color/firefly</item>
        <item name="colorPrimaryVariant">@color/concrete</item>
        <item name="colorBackground">@color/alabaster</item>
        <item name="colorAccent">@color/eastern_blue</item>
        <item name="colorLabelText">@color/gray</item>
        <item name="colorDivider">@color/silver</item>

