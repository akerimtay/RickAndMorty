<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.RM" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!--Material color attributes-->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/grey_100</item>
        <item name="colorSecondary">@color/teal_400</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:colorBackground">@color/grey_50</item>

        <item name="colorOnPrimary">@color/blue_grey_950</item>
        <item name="colorOnPrimarySurface">@color/grey_400</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnBackground">@color/grey_600</item>
        <item name="colorOnSurface">@color/grey_600</item>
        <item name="dividerColor">@color/grey_100</item>
        <item name="greenColor">@color/green_600</item>

        <!--System/Platform attributes-->
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>

        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.RM.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.RM.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.RM.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.RM.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.RM.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.RM.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.RM.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.RM.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.RM.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.RM.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.RM.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.RM.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.RM.Overline</item>

        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Owl.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Owl.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Owl.LargeComponent</item>

        <!--Default styles-->
        <!--<item name="bottomNavigationStyle">@style/Widget.RM.BottomNavigationView</item>-->
